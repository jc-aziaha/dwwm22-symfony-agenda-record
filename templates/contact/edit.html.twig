{% extends 'base.html.twig' %}

{% block title %}Modifier le contact num-{{contact.id}}: {{contact.firstName}} {{contact.lastName}}{% endblock %}

{% block description %}Modification de ce contact: {{contact.firstName}} {{contact.lastName}}{% endblock %}

{% block keywords %}modification, contact, {{contact.firstName}}, {{contact.lastName}}{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier ce contact</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-4 mx-auto p-4 bg-white shadow">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="contact_form_firstName">Prénom</label>
                        <div class="text-danger">{{form_errors(form.firstName)}}</div>
                        {{form_widget(form.firstName, {'attr': {'class':'form-control', 'autofocus': 'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="contact_form_lastName">Nom</label>
                        <div class="text-danger">{{form_errors(form.lastName)}}</div>
                        {{form_widget(form.lastName, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="contact_form_email">Email</label>
                        <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="contact_form_phone">Numéro de téléphone</label>
                        <div class="text-danger">{{form_errors(form.phone)}}</div>
                        {{form_widget(form.phone, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="contact_form_comment">Commentaires</label>
                        <div class="text-danger">{{form_errors(form.comment)}}</div>
                        {{form_widget(form.comment, {'attr': {'class':'form-control', 'rows':4}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" value="Modifier" class="btn btn-primary w-100 shadow">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}